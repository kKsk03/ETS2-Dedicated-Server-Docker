# Container timezone
TZ=Asia/Shanghai

# Auto check and apply updates on container start
ETS2_AUTO_UPDATE=true

# Run SteamCMD validate when updating (slower but checks file integrity)
ETS2_VALIDATE_ON_UPDATE=false

# Steam branch: public, or a beta branch name
ETS2_BRANCH=public

# Data root inside container (host maps ./data -> /data)
ETS2_DATA_HOME=/data/ets2data

# Auto fix permissions on /data at container start (requires root in container)
ETS2_FIX_PERMISSIONS=true

# Require server_packages.sii and server_packages.dat before start
ETS2_REQUIRE_SERVER_PACKAGES=true
